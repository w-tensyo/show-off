.sign_contents
  %h2 アカウント新規登録
  %hr

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      .field__left
        = f.label "名前"
      .field__right
        = f.text_field :name, autofocus: true, autocomplete: "name"

    -# prof_imageを編集するためのfieldを手動で追加 
    .field
      .field__left
        = f.label "プロフィール画像"
      .field__right
        = f.file_field :prof_image
    -# ここまで

    -# prof_imageを編集するためのfieldを手動で追加 
    .field
      .field__left
        = f.label "プロフィールコメント"
      .field__right
        = f.text_area :text, autofocus: true
    -# ここまで

    .field
      .field__left
        = f.label "メールアドレス"
      .field__right
        = f.email_field :email, autofocus: true, autocomplete: "email"

    .field
      .field__left
        = f.label "パスワード"
        - if @minimum_password_length
          %em
          .field__left__under-text
            = @minimum_password_length
            文字以上入力してください。（半角英数字）
      .field__right
        = f.password_field :password, autocomplete: "new-password"
    .field
      .field__left
        = f.label "パスワード再入力"
      .field__right
        = f.password_field :password_confirmation, autocomplete: "new-password"

    %hr
      .sign_contents__under
        = f.submit "Sign up",class: "sign_contents__under--singin-btn"
        .sign_contents__under__other
          = link_to :back do
            .sign_contents__under__other__back-btn
              Back
          = render "devise/shared/links"