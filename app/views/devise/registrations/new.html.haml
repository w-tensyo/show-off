.sign_contents
  %h2 アカウント新規登録
  %hr

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .sign_contents__form
      .sign_contents__form__upper
        = f.label "お名前",class: "sign_contents__form__upper__name"
        .sign_contents__form__upper--icon
          #requier 必須
      = f.text_field :name, autofocus: true, autocomplete: "name",placeholder: "お名前を入力してください", class: "sign_contents__form__under"

    .sign_contents__form
      .sign_contents__form__upper
        = f.label "プロフィール画像",class: "sign_contents__form__upper__name"
        .sign_contents__form__upper--icon
          #optional 任意
      .sign_contents__form__underImgForm--view
        = image_tag "", id: "uploadImg"
      .sign_contents__form__underImgForm
        = f.file_field :prof_image, id: "myfile", class:"sign_contents__form__underImgForm--uploadBtn"

    .sign_contents__form
      .sign_contents__form__upper
        = f.label "プロフィールコメント",class: "sign_contents__form__upper__name"
        .sign_contents__form__upper--icon
          #optional 任意
      = f.text_area :text,placeholder: "自己紹介を入力しましょう！※他のユーザーに公開されます。", class: "sign_contents__form__underTextArea"

    .sign_contents__form
      .sign_contents__form__upper
        = f.label "メールアドレス",class: "sign_contents__form__upper__name"
        .sign_contents__form__upper--icon
          #requier 必須
      = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "exsample@show-off.jp", class: "sign_contents__form__under"

    .sign_contents__form
      .sign_contents__form__upper
        = f.label "パスワード",class: "sign_contents__form__upper__name"
        .sign_contents__form__upper--icon
          #requier 必須
      = f.password_field :password, autocomplete: "new-password", placeholder: "半角英数字6文字以上", class: "sign_contents__form__under"

    .sign_contents__form
      .sign_contents__form__upper
        = f.label "パスワード再入力",class: "sign_contents__form__upper__name"
        .sign_contents__form__upper--icon
          #requier 必須
      = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "もう一度入力をお願いします。", class: "sign_contents__form__under"

    .sign_contents__btnArea
      = f.submit "アカウントを作成する", id: "activeBtn"

    %hr
    .sign_contents__under
      .sign_contents__under__back-btnArea
        = link_to :back, class: "sign_contents__under__back-btnArea__back-btn" do
          TOPへ戻る
      .sign_contents__under__other
        = render "devise/shared/links"