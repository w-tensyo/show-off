.sign_contents
  %h2 ログイン
  %hr
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      .field__left
        = f.label "メールアドレス"
      .field__right
        = f.email_field :email, autofocus: true, autocomplete: "email"

    .field
      .field__left
        = f.label "パスワード"
      .field__right
        = f.password_field :password, autocomplete: "current-password"
      - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me

    %hr
      .sign_contents__under
        = f.submit "Log in",class: "sign_contents__under--singin-btn"
        .sign_contents__under__other
          = link_to :back do
            .sign_contents__under__other__back-btn
              Back
          = render "devise/shared/links"
