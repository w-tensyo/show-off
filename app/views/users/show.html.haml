.user_contents
  .user_contents__upper-info
    .user_contents__upper-info__profile
      .user_contents__upper-info__profile--img
        = image_tag current_user.prof_image ,width: "58px",height: "58px", alt: "ほげ"
      .user_contents__upper-info__profile--name
        = current_user.name
    .user_contents__upper-info__action
      .user_contents__upper-info__action--edit
        = link_to destroy_user_session_path, method: :delete do
          ログアウト
      .user_contents__upper-info__action--sign-out
        = link_to edit_user_registration_path, method: :get do
          編集
  .user_contents__under-info
    .user_contents__under-info--title
      プロフィール
    %hr.border
    .user_contents__under-info--text
      = simple_format( current_user.text, {})


